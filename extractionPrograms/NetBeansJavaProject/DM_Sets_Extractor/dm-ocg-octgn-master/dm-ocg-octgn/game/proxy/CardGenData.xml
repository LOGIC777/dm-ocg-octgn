	<template src="proxy\frames\light.jpg" default="True" >
		<matches>
			<match name="Civilization" value="Light"/>
		</matches>
		<overlayblocks>

			<conditional>
				<switch property="Civilization">
					<case value="Light"><link block="light" /></case>
					<case value="Water"><link block="water" /></case>
					<case value="Darkness"><link block="darkness" /></case>
					<case value="Fire"><link block="fire" /></case>
					<case value="Nature"><link block="nature" /></case>
					<case value="Light/Water"><link block="waterlight" /></case>
					<case value="Water/Darkness"><link block="darkwater" /></case>
					<case value="Darkness/Fire"><link block="darkfire" /></case>
					<case value="Fire/Nature"><link block="firenature" /></case>
					<case value="Light/Nature"><link block="lightnature" /></case>
					<case value="Light/Fire"><link block="firelight" /></case>
					<case value="Water/Nature"><link block="waternature" /></case>
					<case value="Light/Darkness"><link block="darklight" /></case>
					<case value="Water/Fire"><link block="firewater" /></case>
					<case value="Darkness/Nature"><link block="darknature" /></case>
				</switch>
			</conditional>

			<artoverlay>
				<location x="0" y="0" />
				<size height="560" width="400" />
			</artoverlay>

			<conditional>
				<switch property="Civilization">
					<case value="Light"><link block="lightbox" /></case>
					<case value="Water"><link block="waterbox" /></case>
					<case value="Darkness"><link block="darknessbox" /></case>
					<case value="Fire"><link block="firebox" /></case>
					<case value="Nature"><link block="naturebox" /></case>
					<case value="Light/Water"><link block="waterlightbox" /></case>
					<case value="Water/Darkness"><link block="darkwaterbox" /></case>
					<case value="Darkness/Fire"><link block="darkfirebox" /></case>
					<case value="Fire/Nature"><link block="firenaturebox" /></case>
					<case value="Light/Nature"><link block="lightnaturebox" /></case>
					<case value="Light/Fire"><link block="firelightbox" /></case>
					<case value="Water/Nature"><link block="waternaturebox" /></case>
					<case value="Light/Darkness"><link block="darklightbox" /></case>
					<case value="Water/Fire"><link block="firewaterbox" /></case>
					<case value="Darkness/Nature"><link block="darknaturebox" /></case>
				</switch>
			</conditional>

			<conditional>
				<if property="Type" value="Evolution Creature">
					<link block="evo" />
  				</if>
			</conditional>

			<conditional>
				<if property="Type" value="Evolution Cross Gear">
					<link block="evo" />
  				</if>
			</conditional>


		</overlayblocks>
		<textblocks>
			<link block="title"><property name="Name" /></link>
			<link block="race"><property name="Race" /></link>
			<link block="rules"><property name="Rules" /></link>
			<link block="type"><property name="Type" /></link>
			<link block="cost"><property name="Cost" /></link>
			<link block="power"><property name="Power" /></link>
