	<template src="proxy\blank.png" default="True" >
		<matches>
			<match name="Type" value="Creature"/>
		</matches>
		
		<overlayblocks>
			<artoverlay>
				<location x="0" y="0" />
				<size height="560" width="400" />
			</artoverlay>

			<conditional>
				<switch property="Civilization">
					<case value="Light"> <link block="lightC" /> </case>
					<case value="Fire"> <link block="fireC" /> </case>
					<case value="Water"> <link block="waterC" /> </case>
					<case value="Nature"> <link block="natureC" /> </case>
					<case value="Darkness"> <link block="darkC" /> </case>
					
					<case value="Darkness/Fire"> <link block="fireDarkC" /> </case>
					<case value="Fire/Darkness"> <link block="fireDarkC" /> </case>
					
					<case value="Nature/Fire"> <link block="fireNatureC" /> </case>
					<case value="Fire/Nature"> <link block="fireNatureC" /> </case>
					
					<case value="Light/Water"> <link block="lightWaterC" /> </case>
					<case value="Water/Light"> <link block="lightWaterC" /> </case>
					
					<case value="Light/Nature"> <link block="lightNatureC" /> </case>
					<case value="Nature/Light"> <link block="lightNatureC" /> </case>
					
					<case value="Darkness/Water"> <link block="waterDarkC" /> </case>
					<case value="Water/Darkness"> <link block="waterDarkC" /> </case>

					
					<case value="Darkness/Nature"> <link block="darkNatureC" /> </case>
					<case value="Nature/Darkness"> <link block="darkNatureC" /> </case>
					
					<case value="Light/Darkness"> <link block="lightDarkC" /> </case>
					<case value="Darkness/Light"> <link block="lightDarkC" /> </case>
					
					<case value="Light/Fire"> <link block="lightFireC" /> </case>
					<case value="Fire/Light"> <link block="lightFireC" /> </case>
					
					<case value="Fire/Water"> <link block="waterFireC" /> </case>
					<case value="Water/Fire"> <link block="waterFireC" /> </case>
					
					<case value="Water/Nature"> <link block="waterNatureC" /> </case>
					<case value="Nature/Water"> <link block="waterNatureC" /> </case>
					
					<default> <link block="lightC" /> </default>
				</switch>
			</conditional>
	
			<conditional>
				<if property="Type" contains="Evolution">
					<link block="evo" />
  				</if>
			</conditional>
		</overlayblocks>
		
		<textblocks>
						
			<link block="title"><property name="Name" /></link>
			<link block="race"><property name="Race" /></link>
			<link block="typeC"><property name="Type" /></link>
			<link block="rules"><property name="Rules" /></link>
			<link block="cost"><property name="Cost" /></link>
			<link block="power"><property name="Power" /></link>
		</textblocks>
	</template>
	
